[colors]
module-bg = #595959
module-fg = #FFFFFF
transparent-bg = #00000000
hl-bg = #889CB6
alt-bg = #AAAAAA
alt-fg = #454545
background = #A6000000
background-alt = #444
foreground = #264C9C
foreground-alt = #555
primary = #ffb52a
secondary = #e60053
alert = #bd2c40

[settings]
screenchange-reload = true
;compositing-background = xor
;compositing-background = screen
;compositing-foreground = source
;compositing-border = over
;format-margin = 1
;format-padding = 1
format-background = ${colors.module-bg}
format-foreground = ${colors.module-fg}

[global/wm]
;margin-bottom = 5
;margin-top = 5

[bar/mybar]
width = 2500
height = 45
offset-y = 30
offset-x = 30
background = ${colors.transparent-bg}
foreground = #000000

font-0 = tamzenforpowerline:pixelsize=20;1
font-1 = Hack:fontformat=truetype:size=16:antialias=false;0

modules-left = bspwm xwindow
modules-center = 
modules-right = battery date

wm-restack = bspwm
;override-redirect = true

scroll-up = bspwm-desknext
scroll-down = bspwm-deskprev

[module/bspwm]
type = internal/bspwm

label-focused = %index%
label-focused-background = ${colors.hl-bg}
label-focused-padding = 2

label-occupied = %index%
label-occupied-background = ${colors.module-bg}
label-occupied-foreground = ${colors.module-fg}
label-occupied-padding = 2

label-urgent = %index%!
label-urgent-padding = 2
label-urgent-background = ${colors.alert}

label-empty = %index%
label-empty-background = ${colors.module-bg}
label-empty-foreground = ${colors.module-fg}
label-empty-padding = 2

[module/battery]
type = internal/battery
battery = BAT0
adapter = ADP1
full-at = 98

;format-underline = #0a6cf5
;format-charging = <animation-charging> <label-charging>
;format-charging-underline = #ffb52a
format-charging-padding-left = 1
format-discharging-padding-left = 1
format-full-padding-left = 1
;
;format-discharging = <ramp-capacity> <label-discharging>
;tray-transparent = true
;format-discharging-underline = ${self.format-charging-underline}
;
;format-full-prefix = " "
;format-full-prefix-foreground = ${colors.foreground-alt}
;format-full-underline = ${self.format-charging-underline}
;
;ramp-capacity-0 = 
;ramp-capacity-1 = 
;ramp-capacity-2 = 
;ramp-capacity-foreground = ${colors.foreground-alt}
;
;animation-charging-0 = 
;animation-charging-1 = 
;animation-charging-2 = 
;animation-charging-foreground = ${colors.foreground-alt}
;animation-charging-framerate = 750

[module/date]
type = internal/date
interval = 5

date =
date-alt = " %Y-%m-%d"

time = %H:%M
time-alt = %H:%M:%S

;format-prefix = 
;format-prefix-foreground = ${colors.foreground-alt}
;format-underline = #0a6cf5

label = %date% %time%
format-padding = 2

[module/xwindow]
type = internal/xwindow
format-background = ${colors.alt-bg}
format-foreground = ${colors.alt-fg}
format-padding = 4
label = %title:0:30:...%

[module/mpd]
type = internal/mpd
format-online = <label-song>  <icon-prev> <icon-stop> <toggle> <icon-next>

icon-prev = 
icon-stop = 
icon-play = 
icon-pause = 
icon-next = 

label-song-maxlen = 25
label-song-ellipsis = true

[module/volume]
type = internal/volume

format-volume = <label-volume> <bar-volume>
label-volume = VOL
label-volume-foreground = ${root.foreground}

format-muted-prefix = " "
format-muted-foreground = ${colors.foreground-alt}
label-muted = sound muted

bar-volume-width = 10
bar-volume-foreground-0 = #55aa55
bar-volume-foreground-1 = #55aa55
bar-volume-foreground-2 = #55aa55
bar-volume-foreground-3 = #55aa55
bar-volume-foreground-4 = #55aa55
bar-volume-foreground-5 = #f5a70a
bar-volume-foreground-6 = #ff5555
bar-volume-gradient = false
bar-volume-indicator = |
bar-volume-indicator-font = 2
bar-volume-fill = ─
bar-volume-fill-font = 2
bar-volume-empty = ─
bar-volume-empty-font = 2
bar-volume-empty-foreground = ${colors.foreground-alt}

